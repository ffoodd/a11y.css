<nav role="navigation" aria-label="Main navigation">
  <ul>
    {% for link in navigation %}
      <li>
        <a href="{{ link.href }}"{% if link.htmlClass %} class="{{ link.htmlClass }}"{% endif %}{% if page.url == link.href %} aria-current="page"{% endif %}>
          {{ link.label | safe }}
          {% if link.external %}
            <span class="sr-only">&nbsp;(external link)</span>
            {% include "icons/external-link.svg" %}
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
