{
  "title": "a11y.css",
  "name": "a11y.css",
  "description": "This file aims to warn front-end devs about mistakes and potential accessibility failures - but it also helps to rate client-side code and to spot its weaknesses.",
  "version": "5.1.0",
  "style": "css/a11y-en.css",
  "sass": "sass/a11y-en.scss",
  "author": {
    "name": "GaÃ«l Poupard",
    "url": "https://www.ffoodd.fr",
    "email": "gael+npm@ffoodd.fr"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "accessibility-checker",
    "testing",
    "css",
    "sass",
    "scss"
  ],
  "scripts": {
    "start": "concurrently --kill-others \"npm:watch:*\"",
    "docs": "eleventy",
    "docs:debug": "DEBUG=Eleventy* eleventy",
    "docs:js": "uglifyjs site/assets/js/docs.js -o site/static/docs.js -c -m",
    "docs:css": "postcss site/assets/css/docs.css -d site/static/ -u autoprefixer cssnano --no-map",
    "watch:docs": "eleventy --serve",
    "watch:docs:js": "nodemon --watch site/assets/js/ --ext js --exec \"npm run docs:js\"",
    "watch:docs:css": "postcss site/assets/css/docs.css -d site/static/ -u autoprefixer cssnano -w --no-map",
    "build": "sass sass/:css/ --style compressed --no-source-map",
    "postbuild": "postcss css/*.css css/webextension/*.css -r -u autoprefixer cssnano --no-map",
    "watch:css": "sass --watch sass/:css/ --style compressed --no-source-map",
    "prepublishOnly": "npm run build",
    "test": "stylelint \"./sass/**/*.scss\"",
    "bundlewatch": "bundlewatch",
    "prewebext": "rm -rf webextension/css/a11y-*.css && cp -r css/a11y-*_*.css webextension/css && cp -r css/webextension/show-lang.css webextension/css",
    "webext": "npm run webext:polyfill && npm run webext:all",
    "postwebext": "npm run webext:firefox && npm run webext:chrome",
    "webext:polyfill": "cp node_modules/webextension-polyfill/dist/browser-polyfill.min.js webextension/scripts/",
    "webext:cp": "cp -r css/a11y-??.css temp && cp -r css/a11y-?????.css temp",
    "webext:rename": "cd temp && rename 's/a11y-(.{2,5}).*(.css)$/a11y-$1_all$2/' *.css && cd ..",
    "webext:mv": "cp temp/*.css webextension/css",
    "webext:all": "mkdir temp && npm run webext:cp && npm run webext:rename && npm run webext:mv && rm -rf temp",
    "prewebext:firefox": "cp manifest-firefox.json webextension/manifest.json",
    "webext:firefox": "cd webextension && zip -r -FS ../a11ycss-webextension-firefox.zip *",
    "prewebext:chrome": "cp manifest-chrome.json webextension/manifest.json",
    "webext:chrome": "cd webextension && zip -r -FS ../a11ycss-webextension-chrome.zip *"
  },
  "license": "MIT",
  "homepage": "https://ffoodd.github.io/a11y.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/ffoodd/a11y.css"
  },
  "bugs": {
    "url": "https://github.com/ffoodd/a11y.css/issues"
  },
  "browserslist": [
    "last 1 versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^9.8.8",
    "bundlewatch": "^0.3.2",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.12",
    "front-matter": "^3.1.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.2.13",
    "postcss-cli": "^9.0.1",
    "prismjs": "^1.21.0",
    "sass": "^1.43.3",
    "showdown": "^1.9.0",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard-scss": "^2.0.0",
    "uglify-js": "^3.15.1",
    "webextension-polyfill": "^0.4.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "no-invalid-position-at-import-rule": null,
      "comment-whitespace-inside": null,
      "string-quotes": null,
      "color-function-notation": null,
      "at-rule-empty-line-before": null,
      "declaration-empty-line-before": null,
      "comment-empty-line-before": null,
      "max-line-length": 365,
      "max-empty-lines": 2,
      "no-duplicate-selectors": null,
      "no-descending-specificity": null,
      "selector-type-no-unknown": null,
      "selector-list-comma-newline-after": null,
      "number-leading-zero": null,
      "scss/no-global-function-names": null,
      "scss/operator-no-newline-before": null,
      "scss/dollar-variable-colon-space-after": null,
      "scss/function-quote-no-quoted-strings-inside": null,
      "scss/function-unquote-no-unquoted-strings-inside": null,
      "scss/dollar-variable-empty-line-before": null
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./css/a11y-en_error.css",
        "maxSize": "7.75 kB"
      },
      {
        "path": "./css/a11y-en_warning.css",
        "maxSize": "13.75 kB"
      },
      {
        "path": "./css/a11y-en_obsolete.css",
        "maxSize": "17.5 kB"
      },
      {
        "path": "./css/a11y-en.css",
        "maxSize": "21.5 kB"
      }
    ]
  }
}
